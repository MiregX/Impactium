{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "incremental": true,
    "declaration": true,
    "target": "ES5",
    "allowJs": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "./global.d.ts",
    "**/*.module.css"
  ],
  "exclude": ["node_modules", "./dist"]
}