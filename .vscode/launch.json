{
  "configurations": [
    {
      "type": "node-terminal",
      "name": "Start API",
      "request": "launch",
      "command": "npm run start:debug",
      "cwd": "${workspaceFolder}/api",
      "envFile": "${workspaceFolder}/.env",
      "preLaunchTask": "start-engine",
      "postDebugTask": "stop-engine"
    },
    {
      "type": "node-terminal",
      "name": "Start DOCKER",
      "request": "launch",
      "command": "docker compose --profile production up -d",
      "cwd": "${workspaceFolder}/"
    },
    {
      "type": "node-terminal",
      "name": "Start CLIENT",
      "request": "launch",
      "command": "npm run dev",
      "cwd": "${workspaceFolder}/client",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "type": "node-terminal",
      "name": "Start PRISMA",
      "request": "launch",
      "command": "npx prisma studio",
      "cwd": "${workspaceFolder}/api",
      "envFile": "${workspaceFolder}/.env"
    }
  ]
}