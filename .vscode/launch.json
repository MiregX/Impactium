{
  "configurations": [
    {
      "type": "node-terminal",
      "name": "Start API",
      "request": "launch",
      "command": "npm run start:debug",
      "cwd": "${workspaceFolder}/api",
      "preLaunchTask": "start-engine",
      "postDebugTask": "stop-engine"
    },
    {
      "type": "node-terminal",
      "name": "Start API (X)",
      "request": "launch",
      "command": "npm run start:debug",
      "cwd": "${workspaceFolder}/api"
    },
    {
      "type": "node-terminal",
      "name": "Start CLIENT",
      "request": "launch",
      "command": "npm run dev",
      "cwd": "${workspaceFolder}/client",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "type": "node-terminal",
      "name": "Start PRISMA",
      "request": "launch",
      "command": "npx prisma studio --schema libs/api/prisma/schema.prisma",
      "cwd": "${workspaceFolder}/api",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "type": "node-terminal",
      "name": "Build PRODUCTION",
      "request": "launch",
      "command": "docker compose --profile production up -d",
      "cwd": "${workspaceFolder}/"
    }
  ]
}