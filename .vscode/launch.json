{
  "configurations": [
    {
      "type": "node-terminal",
      "name": "Start API",
      "request": "launch",
      "command": "npm run start:debug",
      "cwd": "${workspaceFolder}/api"
    },
    {
      "type": "node-terminal",
      "name": "Start CLIENT",
      "request": "launch",
      "command": "npm run dev",
      "cwd": "${workspaceFolder}/client"
    },
    {
      "type": "node-terminal",
      "name": "Start PRISMA",
      "request": "launch",
      "command": "npx prisma studio",
      "cwd": "${workspaceFolder}/api",
      "envFile": "${workspaceFolder}/dev.env"
    }
  ]
}