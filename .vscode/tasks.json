{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "start-engine",
      "type": "shell",
      "command": "copy .env api/.env; cd api; npm run prisma:generate; npm run prisma:deploy; rm .env",
    },
    {
      "label": "recreate",
      "type": "shell",
      "command": "docker compose --profile development up -d"
    },
    {
      "label": "stop-engine",
      "type": "shell",
      "command": "docker compose down"
    }
  ]
}
