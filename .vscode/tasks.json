{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "up",
      "type": "shell",
      "command": "copy .env api/.env; cd api; npm run prisma:generate; npm run prisma:deploy",
      "dependsOn": "recreate",
    },
    {
      "label": "recreate",
      "type": "shell",
      "command": "docker compose --profile development up -d"
    },
    {
      "label": "down",
      "type": "shell",
      "command": "docker compose down"
    }
  ]
}
