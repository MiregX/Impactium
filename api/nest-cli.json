{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true
  },
  "entryFile": "src/main",
  "projects": {
    "api": {
      "type": "library",
      "root": "libs/api",
      "entryFile": "index",
      "sourceRoot": "libs/api/src",
      "compilerOptions": {
        "tsConfigPath": "libs/api/tsconfig.lib.json"
      }
    },
    "mcs": {
      "type": "library",
      "root": "libs/mcs",
      "entryFile": "index",
      "sourceRoot": "libs/mcs/src",
      "compilerOptions": {
        "tsConfigPath": "libs/mcs/tsconfig.lib.json"
      }
    },
    "seed": {
      "type": "library",
      "root": "libs/seed",
      "entryFile": "index",
      "sourceRoot": "libs/seed/src",
      "compilerOptions": {
        "tsConfigPath": "libs/seed/tsconfig.lib.json"
      }
    }
  }
}
