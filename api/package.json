{
  "name": "impactium-api",
  "version": "0.0",
  "private": true,
  "license": "Impactium CNA/DRS",
  "scripts": {
    "prisma:generate": "npm run prisma:generate:api",
    "prisma:generate:api": "prisma generate --schema ./libs/api/prisma/schema.prisma",
    "prisma:migrate:api": "prisma migrate dev --schema ./libs/api/prisma/schema.prisma",
    "prisma:deploy": "npm run prisma:deploy:api",
    "prisma:deploy:api": "prisma migrate deploy --schema ./libs/api/prisma/schema.prisma",
    "prisma:push": "npm run prisma:push:api",
    "prisma:push:api": "prisma db push --schema ./libs/api/prisma/schema.prisma",
    "prisma:seed": "npm run prisma:deploy && prisma db seed",
    "build": "nest build",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/api/src/main.js",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"libs/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "prisma": {
    "seed": "ts-node libs/seed/seed.ts"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.8",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.3.8",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/microservices": "^10.3.8",
    "@nestjs/mongoose": "^10.0.6",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.8",
    "@nestjs/schedule": "^4.0.2",
    "@nestjs/swagger": "^7.3.1",
    "@prisma/client": "^5.16.2",
    "@types/multer": "^1.4.11",
    "@types/node-steam-openid": "^1.0.3",
    "basic-ftp": "^5.0.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "coinbase-commerce-node": "^1.0.4",
    "cookie-parser": "^1.4.6",
    "date-fns": "^3.6.0",
    "discord-oauth2": "^2.12.1",
    "ioredis": "^5.4.1",
    "mongoose": "^8.3.4",
    "multer": "^1.4.5-lts.1",
    "node-steam-openid": "^1.2.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "sharp": "^0.33.4",
    "telegraf": "^4.16.3",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.8",
    "@types/coinbase-commerce-node": "^1.0.9",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/passport": "^1.0.16",
    "@types/passport-steam": "^1.0.5",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "prisma": "^5.16.2",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": [
        "ts-jest",
        {
          "tsconfig": "./tsconfig.json"
        }
      ]
    },
    "moduleNameMapper": {
      "^@impactium/(.*)$": "<rootDir>/../lib/$1",
      "^@api/main/(.*)$": "<rootDir>/libs/api/src/$1",
      "^@api/mcs/(.*)": "<rootDir>/libs/mcs/src/$1",
      "^@seed/main/(.*)$": "<rootDir>/libs/seed/src/api/$1"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
