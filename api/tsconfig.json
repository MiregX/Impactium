{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "strictBindCallApply": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@impactium/*": ["../lib/*"],
      "@prisma/*": ["./.prisma/*"],
      "@api/main": ["libs/api/src"],
      "@api/main/*": ["libs/api/src/*"],
      "@api/mcs/*": ["libs/mcs/src/*"],
      "@api/mcs": ["libs/mcs/src"],
      "@seed": ["libs/seed/src"],
      "@seed/*": ["libs/seed/src/*"],
      "@seed/main/*": ["libs/seed/src/api/*"]
    }
  }
}
